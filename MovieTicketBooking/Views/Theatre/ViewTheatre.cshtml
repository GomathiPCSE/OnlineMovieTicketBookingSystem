@model MovieTicketBooking.Models.SignUpNextModel

@{
    ViewBag.Title = "ViewTheatre";
    Layout = "~/Views/Shared/_Master.cshtml";
}
<h2 class="headingMovie">Theatre Details</h2>
<div class="adminContent">

    <table cellspacing="0" border="1">
        <tr>
            <th>Theatre Name </th>
            <th>Address </th>
            <th> Number Of Screen</th>
        </tr>
        <tr>
            <td>@Model.TheatreName</td>
            <td>@Model.Address</td>
            <td>@Model.NoOfScreen</td>
            <td>
                @Html.ActionLink("Edit", "UpdateTheatre", "Theatre", new { id = Model.TheatreId }, null) | @Html.ActionLink("View Movie", "ViewMovie", "Movie", new { id = Model.TheatreId }, null) |
                @Html.ActionLink("Add Movie", "AddMovie", "Movie", new { id = Model.TheatreId, screen = Model.NoOfScreen }, null)
            </td>
        </tr>
    </table>
</div>
